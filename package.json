{
  "private": true,
  "name": "@there/there",
  "version": "0.0.0",
  "license": "BSD-3-Clause",
  "workspaces": [
    "web",
    "api"
  ],
  "dependencies": {},
  "devDependencies": {
    "babel-eslint": "8.2.5",
    "babel-plugin-styled-components": "1.5.1",
    "babel-plugin-transform-flow-strip-types": "6.22.0",
    "cross-env": "5.2.0",
    "eslint": "5.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-config-react-app": "2.1.0",
    "eslint-plugin-flowtype": "2.50.0",
    "eslint-plugin-import": "2.13.0",
    "eslint-plugin-jest": "21.17.0",
    "eslint-plugin-jsx-a11y": "6.1.0",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-react": "7.10.0",
    "flow-bin": "0.76.0",
    "flow-mono-cli": "1.3.4",
    "flow-node": "1.2.3",
    "flow-remove-types": "1.2.3",
    "graphql-cli": "2.16.5",
    "husky": "0.14.3",
    "lint-staged": "7.2.0",
    "nodemon": "1.18.3",
    "prettier": "1.13.7",
    "prisma": "1.11.1",
    "rimraf": "2.6.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "flow-mono": {
    "create-symlinks": {
      "ignore": [
        "eslint",
        "jest"
      ]
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "scripts": {
    "dev:web": "cd web && yarn dev",
    "dev:api": "cross-env NODE_PATH=./ cross-env NODE_ENV=development nodemon --exec \"flow-node\" api/index.js",
    "build:web": "cd web && yarn build",
    "prebuild:api": "rimraf build-api",
    "build:api": "cross-env NODE_PATH=./ cross-env NODE_ENV=production flow-remove-types api/ --out-dir build-api/",
    "postbuild:api": "cp api/package.json build-api/package.json && cp yarn.lock build-api/yarn.lock && cp now.json build-api/now.json",
    "start:web": "(cd web && yarn start)",
    "start:api": "cross-env NODE_ENV=production node build-api/index.js",
    "precommit": "lint-staged",
    "prisma": "cd prisma && prisma",
    "graphql": "graphql",
    "flow-mono": "flow-mono",
    "test-lint": "eslint .",
    "test-type": "flow"
  }
}
